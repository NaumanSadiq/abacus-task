	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-extract token from login response",
					"if (pm.response && pm.response.json().data && pm.response.json().data.token) {",
					"    pm.environment.set('auth_token', pm.response.json().data.token);",
					"}"
				]
			}
		}
